@model IEnumerable<ShoppingCart.Models.ViewModels.Account.OrderForUsersVM>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

@if (!Model.Any())
{
    <h3 class="text-center">You don't have any orders!</h3>
}
else
{
    <table class="table">
        <tr>
            <th>
                OrderNumber
            </th>
            <th>
                Order Details
            </th>
            <th>
                CreatedAt
            </th>
            <th>
                Total
            </th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>

            <td>
                @foreach (var order in item.ProductsAndQuantity)
                {
                    @order.Key @:X @order.Value
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Total)
            </td>
        </tr>
        }

    </table>
}
