@model IEnumerable<ShoppingCart.Areas.Admin.Models.ViewModels.Shop.OrdersForAdminVm>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

@if (!Model.Any())
{
<h2 class="text-center">There are no orders.</h2>
}
else
{
<table class="table">
    <tr>
        <th>
            Order Number
        </th>
        <th>
            Username
        </th>
        <th>
            Order Details
        </th>
        <th>
            Created At
        </th>
        <th>
            Total
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @foreach(var item1 in item.ProductsAndQuantity)
            {
                @item1.Key @:x @item1.Value <br />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
    </tr>
}

</table>
}